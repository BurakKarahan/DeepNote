<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".Fragments.takip_sayfasi">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:elevation="0.1dp"
        android:orientation="horizontal"
        app:cardCornerRadius="0dp"
        app:cardElevation="0.1dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bottom_gradient">

            <TextView
                android:id="@+id/DeepNoteBaslik"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="DeepNote"
                android:textColor="#000000"
                android:textSize="25dp" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="#fff"
        android:orientation="vertical">

        <ProgressBar
            android:id="@+id/anasayfa_progress_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="0dp"
            android:paddingTop="25dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/takip_sayfası_lisview_uyarı_mesajı"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="@string/takip_sayfasi_listview_top_uyarı"
            android:textColor="#000"
            android:textSize="16sp"
            android:textStyle="bold|italic" />

        <ImageView
            android:id="@+id/gonderi_yok"
            android:layout_width="300dp"
            android:layout_height="500dp"
            android:src="@drawable/gonderi_yok"
            android:layout_gravity="center" />
        
        <TextView
            android:id="@+id/altsatıricin"
            android:layout_width="match_parent"
            android:layout_height="300dp" />

        <io.supercharge.shimmerlayout.ShimmerLayout
            android:id="@+id/shimmer_layout"
            app:shimmer_animation_duration="500"
            app:shimmer_angle="20"
            app:shimmer_auto_start="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <include layout="@layout/ana_sayfa_place_holder_item"/>
                <include layout="@layout/ana_sayfa_place_holder_item"/>
                <include layout="@layout/ana_sayfa_place_holder_item"/>
                <include layout="@layout/ana_sayfa_place_holder_item"/>
                <include layout="@layout/ana_sayfa_place_holder_item"/>
            </LinearLayout>
        </io.supercharge.shimmerlayout.ShimmerLayout>



        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/home_sayfasi_refesh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ListView
                android:id="@+id/listview_takipsayfasi"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@null"
                android:dividerHeight="0dp" />

        </android.support.v4.widget.SwipeRefreshLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/loadPage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="10dp"
        android:background="@drawable/dahafazla"
        android:gravity="center"
        android:visibility="gone">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/dahafazlayukle" />

    </LinearLayout>

</FrameLayout>