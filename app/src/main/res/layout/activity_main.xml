<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="#29679c">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:background="#456">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#fff"
        android:orientation="vertical"
        android:gravity="center">


        <TextView
            android:id="@+id/giris_genel_uyarı"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/giris_uyarı"
            android:visibility="invisible"
            android:layout_marginBottom="5dp"
            />


        <EditText
            android:id="@+id/giris_mail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="#9029679c"
            android:hint="email"
            android:textSize="14dp"/>

        <EditText
            android:id="@+id/giris_sifre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="#9029679c"
            android:hint="şifre"
            android:textSize="14dp"/>

        <Button
            android:id="@+id/giris_buton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/qwqw"
            android:text="giriş yap"
            android:textColor="#fff"/>

        <TextView
            android:id="@+id/sifremi_unuttum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:text="@string/sifre_unutma"/>

        <TextView
            android:id="@+id/hesap_acma"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Hesabın yok mu? Hemen oluştur!"
            />


    </LinearLayout>


</LinearLayout>