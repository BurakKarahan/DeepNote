<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#29679c"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:background="#fff"
        android:gravity="center">

        <TextView
            android:id="@+id/loginbaslik"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DeepNote"
            android:textColor="#29679c"
            android:gravity="center"
            android:textSize="35dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#fff"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/giris_genel_uyarı"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:text="@string/giris_uyarı"
            android:visibility="invisible" />

        <EditText
            android:id="@+id/giris_mail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/et_custom"
            android:padding="10dp"
            android:digits="ABCÇDEFGĞHIİJKLMNOÖPQRSŞTUÜVWXYZabcçdefgğhıijklmnoöpqrsştuüvwxyz1234567890@._-"
            android:hint="E-mail"
            android:inputType="textFilter|textEmailAddress"
            android:textSize="14dp"
            android:textCursorDrawable="@null"/>

        <EditText
            android:id="@+id/giris_sifre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/et_custom"
            android:digits="ABCÇDEFGĞHIİJKLMNOÖPQRSŞTUÜVWXYZabcçdefgğhıijklmnoöpqrsştuüvwxyz1234567890@._-"
            android:hint="Şifre"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textCursorDrawable="@null"
            android:textSize="14dp"
            android:drawableRight="@drawable/password_visible"/>

        <TextView
            android:id="@+id/sifremi_unuttum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="20dp"
            android:gravity="end"
            android:text="@string/sifre_unutma" />



        <Button
            android:id="@+id/giris_buton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/qwqw"
            android:text="giriş yap"
            android:elevation="0dp"
            android:textColor="#fff" />



        <TextView
            android:id="@+id/hesap_acma"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Hesabın yok mu? Hemen oluştur!" />

    </LinearLayout>

</LinearLayout>