<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.home_sayfasi"
    android:background="#fff"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DeepNote"
            android:textSize="20dp"
            android:textStyle="bold|italic"
            android:layout_gravity="center"/>
        <ImageView
            android:id="@+id/arama_butonu"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:clickable="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/arama_ikonu"
            android:layout_gravity="end|center"
            />
    </android.support.v7.widget.CardView>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="#fff"
        >

        <ProgressBar
            android:id="@+id/anasayfa_progress_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="25dp"
            android:visibility="gone"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/home_sayfas覺_lisview_uyar覺_mesaj覺"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/home_sayfasi_listview_top_uyar覺"
            android:textColor="@color/colorAccent"
            android:gravity="center"
            android:textSize="16sp"
            android:textStyle="bold|italic"
            android:visibility="gone"/>
        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/home_sayfasi_refesh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ListView
            android:id="@+id/listview_homesayfasi"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        </android.support.v4.widget.SwipeRefreshLayout>
    </LinearLayout>
</FrameLayout>