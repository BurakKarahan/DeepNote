<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.home_sayfasi"
    android:background="#fff">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:elevation="0.1dp"
        app:cardElevation="0.1dp"
        app:cardCornerRadius="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bottom_gradient">

            <LinearLayout
                android:id="@+id/loadPage2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/dahafazla"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ustsayfayagit"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DeepNote"
                android:textSize="20dp"
                android:textColor="#3b5998"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:layout_centerVertical="true"/>

            <ImageView
                android:id="@+id/arama_butonu"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:clickable="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/flaticonarama"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                />

        </RelativeLayout>
    </android.support.v7.widget.CardView>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="#fff"
        android:orientation="vertical"
        >

        <ProgressBar
            android:id="@+id/anasayfa_progress_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="25dp"
            android:visibility="gone"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/home_sayfas覺_lisview_uyar覺_mesaj覺"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/home_sayfasi_listview_top_uyar覺"
            android:textColor="@color/colorAccent"
            android:gravity="center"
            android:textSize="16sp"
            android:textStyle="bold|italic"
            android:visibility="gone"/>
        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/home_sayfasi_refesh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ListView
            android:id="@+id/listview_homesayfasi"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        </android.support.v4.widget.SwipeRefreshLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/loadPage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/dahafazla"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="10dp"
        android:gravity="center">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/dahafazlayukle"/>

    </LinearLayout>




</FrameLayout>