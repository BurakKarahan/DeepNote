<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pop_tasarim"
    android:gravity="center"
    android:padding="15dp"
    tools:context=".anasayfa_pop_up_arama">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/transparan"
        android:orientation="vertical"
        android:padding="15dp">

        <AutoCompleteTextView
            android:id="@+id/arama_universite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:completionThreshold="1"
            android:layout_marginBottom="10dp"
            android:textSize="14dp"
            android:digits="ABCÇDEFGĞHIİJKLMNOÖPQRSŞTUÜVWXYZabcçdefgğhıijklmnoöpqrsştuüvwxyz1234567890@._- "
            android:inputType="textFilter|textAutoComplete"
            android:hint="Üniversite"
            android:background="@drawable/et_custom"
            android:padding="10dp"
            android:text="@string/universite_listesi__arama_hepsi" />

        <AutoCompleteTextView
            android:id="@+id/arama_bolum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:completionThreshold="1"
            android:layout_marginBottom="10dp"
            android:background="@drawable/et_custom"
            android:padding="10dp"
            android:textSize="14dp"
            android:digits="ABCÇDEFGĞHIİJKLMNOÖPQRSŞTUÜVWXYZabcçdefgğhıijklmnoöpqrsştuüvwxyz1234567890@._- "
            android:inputType="textFilter|textAutoComplete"
            android:hint="Bölüm" />

        <EditText
            android:id="@+id/arama_dersadi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ders Adı"
            android:background="@drawable/et_custom"
            android:padding="10dp"
            android:textSize="14dp"
            android:digits="ABCÇDEFGĞHIİJKLMNOÖPQRSŞTUÜVWXYZabcçdefgğhıijklmnoöpqrsştuüvwxyz1234567890@._- "
            android:inputType="textFilter"/>

        <Button
            android:id="@+id/arama_buton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/aramabutonustil"
            android:text="Ara"
            android:textColor="#fff" />

    </LinearLayout>

</RelativeLayout>