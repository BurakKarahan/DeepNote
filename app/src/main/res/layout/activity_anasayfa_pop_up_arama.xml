<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    tools:context=".anasayfa_pop_up_arama"
    android:background="@drawable/pop_tasarim"
    android:gravity="center">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/transparan"
        android:padding="15dp">


        <AutoCompleteTextView
            android:id="@+id/autotext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="okul seç"
            android:completionThreshold="1"
            />

        <AutoCompleteTextView
            android:id="@+id/autookul"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="bölüm seç"
            android:completionThreshold="1"
            />

        <Spinner
            android:id="@+id/arama_universite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Okul Adı"
            android:gravity="center"/>


        <Spinner
            android:id="@+id/arama_bolum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Bölüm Adı"
            android:gravity="center"/>

        <TextView
            android:id="@+id/arama_bolum_altı_bilgilendirme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/arama_pop_up_bolum_uyarı"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            android:visibility="gone"
            />
        <EditText
            android:id="@+id/arama_dersadi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ders Adı"
            />
        <Button
            android:id="@+id/arama_buton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/aramabutonustil"
            android:text="Ara"
            android:textColor="#fff"
            android:layout_gravity="center"/>



    </LinearLayout>

</RelativeLayout>