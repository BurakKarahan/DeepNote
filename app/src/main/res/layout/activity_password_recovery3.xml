<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PasswordRecovery3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="224dp"
        android:background="@drawable/transparan"
        android:orientation="vertical"
        android:padding="15dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp">

        <EditText
            android:id="@+id/Sifre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:digits="ABCÇDEFGĞHIİJKLMNOÖPQRSŞTUÜVWXYZabcçdefgğhıijklmnoöpqrsştuüvwxyz1234567890@._-"
            android:gravity="center"
            android:background="@drawable/et_custom"
            android:padding="10dp"
            android:layout_marginBottom="10dp"
            android:hint="Yeni Şifreniz"
            android:inputType="textPassword"
            android:textSize="14dp" />

        <EditText
            android:id="@+id/SifreTekrar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/et_custom"
            android:padding="10dp"
            android:digits="ABCÇDEFGĞHIİJKLMNOÖPQRSŞTUÜVWXYZabcçdefgğhıijklmnoöpqrsştuüvwxyz1234567890@._-"
            android:gravity="center"
            android:hint="Yeni Şifrenizi Tekrar Giriniz"
            android:inputType="textPassword"
            android:textSize="14dp" />

        <Button
            android:id="@+id/SifreGonder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/qwqw"
            android:text="giriş yap"
            android:elevation="0dp"
            android:textColor="#fff" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>