<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:padding="3dp">

  <android.support.v7.widget.CardView
      android:layout_margin="10dp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:elevation="50dp"
      android:id="@+id/place_layout_cardview"
      android:layout_centerHorizontal="true"
      android:innerRadius="10dp"
      android:shape="ring"
      android:thicknessRatio="1.9"
      >

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:padding="1.9dp">

          <ImageView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:src="@drawable/ic_delete_black_24dp"
              android:layout_marginTop="10dp"
              android:id="@+id/ButonSil"
              android:layout_marginLeft="10dp"
              android:visibility="gone"/>

          <LinearLayout
              android:id="@+id/profilsayfasi_listview_tıklama"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:background="#fff"
              android:layout_marginLeft="10dp">

              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:orientation="horizontal"
                  android:padding="5dp">

                  <LinearLayout
                      android:layout_width="wrap_content"
                      android:layout_height="match_parent"
                      android:layout_weight="1">


                      <TextView
                          android:id="@+id/listview_profil_ders"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:maxLength="20"
                          android:text="Ders"
                          android:textColor="#6a6d72"
                          android:textSize="15dp"
                          android:textStyle="bold" />

                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text=" / "/>

                      <TextView
                          android:id="@+id/listview_profil_bolum"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:maxLength="25"
                          android:text="Bölüm"
                          android:textColor="#6a6d72"
                          android:textSize="15dp"
                          android:textStyle="bold" />
                  </LinearLayout>

                  <LinearLayout
                      android:layout_width="wrap_content"
                      android:layout_height="match_parent"
                      android:layout_weight="1"
                      android:visibility="gone">

                      <!--<TextView
                          android:id="@+id/listview_profil_bolum"
                          android:textColor="#6a6d72"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:drawableLeft="@drawable/kitap"
                          android:drawablePadding="2dp"
                          android:textSize="15dp" />-->


                  </LinearLayout>



              </LinearLayout>

              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:padding="5dp"
                  >

                  <TextView
                      android:id="@+id/listview_profil_aciklama"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:textSize="12dp"
                      android:maxLength="100"
                      />

              </LinearLayout>
          </LinearLayout>
      </LinearLayout>

  </android.support.v7.widget.CardView>



</LinearLayout>

