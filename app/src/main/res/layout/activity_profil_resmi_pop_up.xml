<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pop_tasarim"
    android:gravity="center"
    android:padding="15dp"
    tools:context=".profil_resmi_pop_up">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/transparan"
        android:padding="15dp">
    <Button
        android:id="@+id/profil_resmi_yukleme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_marginTop="10dp"
        android:background="#046ec8"
        android:text="Yeni Resim Sec"
        android:textStyle="normal"
        android:textColor="#fff"
        android:layout_gravity="center"/>
    <Button
        android:id="@+id/profil_resmi_silme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_marginTop="10dp"
        android:background="#046ec8"
        android:text="Sil"
        android:textColor="#fff"
        android:layout_gravity="center"/>
   </LinearLayout>
</RelativeLayout>