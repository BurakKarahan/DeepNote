<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profil_paylasimlari_ayrinti">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_weight="9"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <com.mikhaellopez.circularimageview.CircularImageView
                            android:id="@+id/ayrıntı_profilsayfasi_profilfotosu"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:clickable="true"
                            android:src="@drawable/main_activity_profil"
                            app:civ_border="false" />

                        <TextView
                            android:id="@+id/ayrıntı_profilsayfasi_ad_soyad"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:text="isim" />

                    </LinearLayout>
                    <TextView
                        android:id="@+id/ayrıntı_profilsayfasi_ders"
                        android:textColor="#6a6d72"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:drawableLeft="@drawable/dosyaresmi"
                        android:drawablePadding="3dp"
                        android:layout_marginLeft="15dp"
                        android:textSize="15dp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:paddingLeft="25dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/ayrıntı_profilsayfasi_universite"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/okul_logo"
                        android:drawablePadding="5dp"
                        android:text="okul" />

                    <TextView
                        android:id="@+id/ayrıntı_profilsayfasi_bolum"
                        android:textColor="#6a6d72"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/kitap"
                        android:layout_marginTop="10dp"
                        android:textSize="15dp" />

                </LinearLayout>


            </LinearLayout>


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/ayrıntı_profilsayfasi_aciklama"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="bottom"
                            android:orientation="horizontal"
                            android:padding="10dp"
                            android:layout_weight="9">

                            <!-- pdf  gelicek buraya -->
                            <WebView
                                android:id="@+id/ayrıntı_profilsayfasi_pdf_webview"
                                android:layout_width="match_parent"
                                android:layout_height="350dp"
                                android:visibility="gone"></WebView>


                            <ImageView
                                android:id="@+id/ayrıntı_profilsayfasi_resim"
                                android:layout_width="match_parent"
                                android:layout_height="350dp"
                                android:visibility="gone"/>
                        </RelativeLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="end">
                                <ImageButton
                                    android:id="@+id/ayrıntı_profilsayfasi_indirme"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_marginBottom="10dp"
                                    android:layout_marginRight="15dp"
                                    android:layout_toRightOf="@id/ayrıntı_homesayfasi_resim"
                                    android:background="#fff"
                                    android:src="@drawable/indir" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>


            </android.support.v7.widget.CardView>




            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/ayrıntı_profilsayfasi_yorum"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Yorum yap..."
                        android:textSize="15dp"
                        android:layout_weight="3"/>
                    <ImageButton
                        android:id="@+id/ayrıntı_profil_yorum_buton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#fff"
                        android:src="@drawable/send"/>

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="70dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/ayrıntı_profil_yorumlar_lisview_uyarı"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/ayrıntısayfalari_yorum_listview_uyarı"
                        android:textSize="16dp"
                        android:visibility="gone"
                        android:textColor="@color/colorAccent"
                        android:layout_gravity="center"
                        android:gravity="center"/>

                    <ProgressBar
                        android:id="@+id/profil_ayrıntı_progressbar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:layout_gravity="center"/>
                    <ListView
                        android:id="@+id/ayrıntı_profil_listview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>









        </LinearLayout>
    </ScrollView>

</LinearLayout>